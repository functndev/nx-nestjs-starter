{
	"name": "nestjs-starter",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"preprepare": "husky install",
		"prepare": "npx prisma generate",
		"prelint-staged-command": "npm run db:format",
		"lint-staged-command": "nx format:write --uncommitted",
		"start": "nx serve",
		"start:api": "nx serve api",
		"build": "nx build",
		"test": "nx test",
		"format:check": "nx format:check",
		"format:write": "nx format:write",
		"affected:lint": "nx affected:lint --maxWarnings 0 --parallel",
		"affected:lint:fix": "nx affected:lint --maxWarnings 0 --parallel --fix",
		"db:push": "npx prisma db push",
		"db:validate": "npx prisma validate",
		"db:format": "npx prisma format",
		"db:migrate:dev": "npx prisma migrate dev",
		"db:migrate:reset": "npx prisma migrate reset",
		"db:seed": "npx prisma db seed",
		"prisma:generate": "npx prisma generate",
		"gen:lib:nest": "nx g @nestjs-starter/workspace:nest-library",
		"rm:lib": "nx g @nrwl/workspace:remove",
		"mv:lib": "nx g @nrwl/workspace:move"
	},
	"prisma": {
		"seed": "ts-node --skip-project prisma/seed.ts"
	},
	"private": true,
	"dependencies": {
		"@nestjs/common": "9.2.0",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "9.2.0",
		"@nestjs/platform-express": "9.2.0",
		"@nestjs/swagger": "6.1.3",
		"@prisma/client": "^4.6.1",
		"@quixo3/prisma-session-store": "^3.1.10",
		"@swc/helpers": "~0.4.11",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"cookie-parser": "^1.4.6",
		"express-basic-auth": "^1.2.1",
		"express-session": "^1.17.3",
		"helmet": "^6.0.0",
		"i18next": "^22.0.5",
		"i18next-http-middleware": "^3.2.1",
		"joi": "^17.7.0",
		"nestjs-pino": "^3.1.1",
		"pino-http": "^8.2.1",
		"pino-pretty": "^8.1.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.5.7",
		"swagger-ui-express": "^4.6.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@nestjs/schematics": "9.0.3",
		"@nestjs/testing": "9.2.0",
		"@nrwl/cli": "15.0.13",
		"@nrwl/devkit": "15.0.13",
		"@nrwl/eslint-plugin-nx": "15.0.13",
		"@nrwl/jest": "15.0.13",
		"@nrwl/js": "15.0.13",
		"@nrwl/linter": "15.0.13",
		"@nrwl/nest": "15.0.13",
		"@nrwl/node": "15.0.13",
		"@nrwl/nx-plugin": "^15.0.13",
		"@nrwl/workspace": "15.0.13",
		"@swc-node/register": "^1.4.2",
		"@swc/cli": "~0.1.55",
		"@swc/core": "^1.2.173",
		"@types/cookie-parser": "^1.4.3",
		"@types/express-session": "^1.17.5",
		"@types/jest": "28.1.1",
		"@types/node": "16.11.7",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "5.43.0",
		"@typescript-eslint/parser": "5.43.0",
		"eslint": "8.27.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.2",
		"jest": "28.1.1",
		"jest-environment-jsdom": "28.1.1",
		"jsonc-eslint-parser": "^2.1.0",
		"lint-staged": "^13.0.3",
		"nx": "15.0.13",
		"prettier": "2.7.1",
		"prisma": "^4.6.1",
		"ts-jest": "28.0.5",
		"ts-node": "10.9.1",
		"ts-toolbelt": "^9.6.0",
		"typescript": "4.8.4"
	},
	"lint-staged": {
		"*.{ts,tsx,js,css,md,json,prisma}": "npm run lint-staged-command"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	}
}
