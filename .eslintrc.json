{
	"root": true,
	"ignorePatterns": ["**/*"],
	"plugins": ["@nrwl/nx", "import"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nrwl/nx/enforce-module-boundaries": [
					"error",
					{
						"enforceBuildableLibDependency": true,
						"allow": [],
						"depConstraints": [
							{
								"sourceTag": "scope:shared",
								"onlyDependOnLibsWithTags": ["scope:shared"],
								"bannedExternalImports": ["*react*", "*prisma*", "*nest*"]
							},
							{
								"sourceTag": "scope:backend",
								"onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"],
								"bannedExternalImports": ["*react*"]
							},
							{
								"sourceTag": "scope:backend-core",
								"onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"],
								"bannedExternalImports": ["*react*"]
							},
							{
								"sourceTag": "scope:backend-app",
								"onlyDependOnLibsWithTags": ["scope:backend-core"],
								"bannedExternalImports": ["*react*"]
							}
						]
					}
				],
				"import/first": ["error"],
				"import/no-useless-path-segments": ["error"],
				"import/no-duplicates": ["error"],
				"import/order": [
					"error",
					{
						"pathGroups": [
							{
								"pattern": "@nestjs-starter/**",
								"group": "internal"
							},
							{
								"pattern": "*.+(css|sass|less|scss|pcss|styl)",
								"patternOptions": { "dot": true, "nocomment": true, "matchBase": true },
								"group": "unknown"
							}
						],
						"groups": [
							["external", "builtin"],
							"internal",
							["index", "sibling", "parent"],
							"object",
							"type",
							"unknown"
						],
						"newlines-between": "always",
						"pathGroupsExcludedImportTypes": ["type"]
					}
				],
				"no-console": [
					"error",
					{
						"allow": ["warn", "error"]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"extends": ["plugin:@nrwl/nx/typescript"],
			"rules": {
				"@typescript-eslint/lines-between-class-members": [
					"error",
					"always",
					{ "exceptAfterSingleLine": true }
				],
				"@typescript-eslint/consistent-type-imports": ["error"],
				"@typescript-eslint/naming-convention": [
					"error",
					{
						"selector": "interface",
						"format": ["PascalCase"]
					},
					{
						"selector": "class",
						"format": ["PascalCase"]
					},
					{
						"selector": "typeAlias",
						"format": ["PascalCase"]
					}
				],
				"@typescript-eslint/explicit-member-accessibility": [
					"error",
					{
						"accessibility": "explicit",
						"overrides": {
							"constructors": "no-public",
							"properties": "no-public"
						}
					}
				],
				"no-mixed-spaces-and-tabs": "off"
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"extends": ["plugin:@nrwl/nx/javascript"],
			"rules": {}
		},
		{
			"files": "*.json",
			"parser": "jsonc-eslint-parser",
			"rules": {}
		}
	]
}
